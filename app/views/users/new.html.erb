<div class="home">
  <div class="error-messages">
    <ul>
      <% @user.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>

  <div class="new-user">
    <%= form_for @user do |f| %>
      <div class="field">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>

      <div class="field">
        <%= f.label :phone %>
        <%= f.text_field :phone %>
      </div>

      <%= f.submit "Subscribe", class: "subscribe" %>
    <% end %>
  </div>
</div>
